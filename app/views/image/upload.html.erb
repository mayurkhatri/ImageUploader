<%= form_for @image,url: upload_post_image_index_path, :html => {:multipart => true } do |form| %>
  <p>
  <%= form.label :title %>
  <%= form.text_field :title %>
  </p>
  <%= form.hidden_field :uploadedby%>
  <p>
    <%= form.label "Upload"%>
    <%= form.file_field :avatar %>
  </p>

  <p><%= form.submit %></p>
<% end %>
